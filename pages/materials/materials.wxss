page {
    background:rgba(245,246,247,1);
    width: 750rpx;
    font-family:PingFangSC-Medium,PingFang SC;
}
.materialsBg {
    width: 750rpx;
    height: 340rpx;
}
.materialsBg image{
    width: 100%;
    height: 100%;
}
.materials {
    width: 690rpx;
    position: absolute;
    left: 30rpx;
    top: 250rpx;
}
.materialsList {
    width: 100%;
    height: 230rpx;
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
    margin-bottom: 24rpx;
    background-color:#fff;
    border-radius:8rpx;
    z-index: 11;
}
.materialsListLeft {
    width: 168rpx;
    height: 168rpx;
}
.materialsListLeft image {
    width: 100%;
    height: 100%;
    border-radius:8rpx;
}
.materialsListRight {
    width: 438rpx;
    height: 168rpx;
    margin-left: 24rpx;
    font-size:34rpx;
    font-weight:600;
    color:rgba(46,48,51,1);
    height: 168rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.materialsListRight view{
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.materialsListRight .introduction {
    font-size:24rpx;
    font-weight:400;
    color:rgba(96,101,108,1);
    margin: 10rpx 0 0 0;
}
.materialsListRight .tag {
    height: 32rpx;
    line-height: 32rpx;
    font-size: 20rpx;
    color: #00B35A;
    padding: 0 15rpx;
    margin-right: 22rpx;
    background:rgba(0,166,28,0.1);
    border-radius:16rpx;
}
