.none{display:none;opacity:0; }
.container{padding:0rpx;padding-bottom: 100rpx;}
page{background:#F5F6F7;}
.project-header{width:750rpx;height:260rpx;}
.project-header image{width:100%;height:100%;display:block;}

.class_category{background:#ffffff;padding:30rpx 30rpx 10rpx 30rpx;width:100%;height:auto;box-sizing: border-box;margin-bottom:16rpx;}
.class_category .title{width:100%; font-size:40rpx;font-family:PingFang-SC-Bold,PingFang-SC;font-weight:bold;color:rgba(17,25,21,1);line-height:40rpx;margin:10rpx 0 20rpx 0;}
.class_category .title image{width:40rpx;height:40rpx;margin-right:10rpx;position:relative;top:6rpx;}


.class_category .page-class{padding:30rpx 0;position:relative;border-bottom:0.3px solid #f6f6f6;}
.class_category .page-class:last-child{border-bottom:0}
.class_category .page-class .h2{width:100%;display:inline-block;flex-direction: column;justify-content: space-between;font-size:30rpx;font-family:PingFangSC-Medium,PingFang SC;font-weight:bold;color:#2E3033;line-height:32rpx;}

.class_category .page-class rich-text{width:100%;display:block;margin:15rpx 0;}
.class_category .page-class rich-text ul{padding:0;margin:0;width:100%;display:block;}
.class_category .page-class rich-text ul li{float:left;position:relative;width:calc(50% - 25rpx);box-sizing: border-box; margin-right:25rpx;padding:5rpx 0 5rpx 15rpx; font-size:24rpx;font-family:PingFangSC-Regular,PingFang SC;font-weight:400;color:#959CA6;line-height:35rpx;}
.class_category .page-class rich-text ul li::after{content:" ";width:6rpx;height:6rpx;background:#B8C0CC;background-size:100%;display: inline-block;position: absolute;top:18rpx;left:0;float:left;}
.class_category .page-class>view{width:100%;display:block;}
.class_category .page-class>view .price{float:right;font-size:36rpx;font-family:PingFang-SC-Bold,PingFang-SC;font-weight:bold;color:rgba(255,106,0,1);line-height:40rpx;}
.class_category .page-class>view .tag{background:rgba(0,166,28,0.1);height:32rpx;padding:0px 15rpx;margin-top:6rpx; border-radius:16px;float:left;font-size:20rpx;font-family:PingFang-SC-Medium,PingFang-SC;font-weight:500;color:rgba(0,179,90,1);line-height:28rpx;margin-right:10rpx;}

