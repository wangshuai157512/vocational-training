.modal {position: fixed;top: 0;bottom: 0;left: 0;right: 0;height:100%;background: rgba(0,0,0,0.5);display: flex;justify-content: center;align-items: center; z-index: 3;}
.phone {
    width:562rpx;
    height:420rpx;
    background:rgba(255,255,255,1);
    border-radius:16rpx;
    padding: 44rpx 41rpx;
    box-sizing: border-box;
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(51,51,51,1);
}
.phone .phoneImg {
    width: 330rpx;
    height: 110rpx;
    margin: 38rpx 75rpx 47rpx 75rpx;
}
.phone .phoneImg image{
    width: 100%;
    height: 100%;
}
.phoneBtn {
    width:100%;
    height:88rpx;
    border-radius:49rpx;
    position: relative;
}
.phoneBtn button {
    width:430rpx!important;
    height:88rpx!important;
    line-height: 88rpx;
    text-align: center;
    color: #fff;
    font-size:36rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:550;
    padding: 0;
    margin: 0;
    /* background:linear-gradient(270deg,rgba(242,89,12,1) 0%,rgba(255,114,13,1) 100%); */
    background:rgba(7,193,96,1);
    border-radius:8px;
    position: absolute;
    top: 0;
    left: 26rpx;
}

.materialBody {
    width: 750rpx;
    padding: 30rpx;
    box-sizing: border-box;
    font-family:PingFangSC-Medium,PingFang SC;
}
.material {
    width: 100%;
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    background: #fff;
    border-radius:8rpx;
    margin-bottom: 98rpx;
    position: relative;
}
.materialList {
    width: 100%;
    height: 100rpx;
    display: flex;
    margin-bottom: 64rpx;
}
.no-margin {
    margin-bottom: 0rpx!important; 
}
.materialListLeft {
    width: 100rpx;
    height: 100rpx;
    /* background-color: red; */
}
.materialListLeft image {
    width: 100%;
    height: 100%;
}
.materialListRight {
    margin-left: 24rpx;
    padding: 0 0 20rpx 0;
    font-size:30rpx;
    font-weight:600;
    color:rgba(46,48,51,1);
}

.materialListRight view {
    width: 480rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
                    
}
.materialListRight .introduction {
    font-size:26rpx;
    font-weight:400;
    color:rgba(149,156,166,1);
    margin-top: 13rpx;
}
.materialBtn {
    width: 750rpx;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    font-size: 36rpx;
     color:#fff ;
     font-family:PingFangSC-Medium,PingFang SC;
    background:linear-gradient(270deg,rgba(242,89,12,1) 0%,rgba(255,114,13,1) 100%);
   position: fixed;
    left: 0;
    bottom: 0;
}
.materialBtn button{
    width: 750rpx!important;
    height: 98rpx;
    line-height: 98rpx;
     font-weight:500;
     text-align: center;
    font-size: 36rpx;
     color:#fff ;
     font-family:PingFangSC-Medium,PingFang SC;
      background:transparent!important;
      z-index: 100;
    padding: 0;
    margin: 0;
    background: transparent;
    border-radius:49rpx;
    position: absolute;
    top: 0;
    left: 0;
}


