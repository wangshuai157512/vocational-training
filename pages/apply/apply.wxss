.none{display:none;opacity:0; }
page{background:#F5F6F7;}

.container{width:100%;background:#F5F6F7 url(https://xxzx.chinaedu.net/wx/img/1591234631187.jpg) no-repeat center top;background-size:100%;padding:0rpx;}
.container .page-header{width:100%;height:275rpx;box-sizing:border-box;display:block;padding:40rpx 0}
.container .page-header rich-text{text-align:center;color:#ffffff;}
.container .page-header rich-text h3,.container .page-header rich-text  h1,.container .page-header rich-text p{width:100%;display:block;}
.container .page-header rich-text h3{font-size:38rpx;font-weight:400;}
.container .page-header rich-text h1{font-size:70rpx;font-weight:800;line-height:100rpx;}
.container .page-header rich-text p{font-size:26rpx;font-weight:400;color:rgba(255,255,255,0.75);line-height:50rpx;}
.container .page-header rich-text p span{margin:0 10rpx;padding-left:0rpx;}
.container .page-header rich-text p span image{width:22rpx;height:22rpx;margin-right:10rpx;position: relative;top: 2rpx;}

.container .page-section{width:690rpx;height:auto;margin:0rpx 30rpx 30rpx 30rpx; background:#ffffff;border-radius:12rpx;}
.container .page-section .Title{width:100%;text-align: center;padding-top:30rpx;height:100rpx;box-sizing:border-box;display: block;line-height:80rpx; font-size:48rpx;overflow:hidden;font-family:PingFang-SC-Heavy,PingFang-SC;font-weight:800;color:rgba(24,25,26,1);position: relative;}

.container .page-section .formBlock{padding:40rpx;width:100%;box-sizing:border-box;}
.container .page-section .formBlock .section{margin:0rpx 0rpx 40rpx 0rpx;}
.container .page-section .formBlock .section .section__title{height:40rpx;width:100%;display:block; margin-bottom:10rpx;font-size:26rpx;font-family:PingFangSC-Regular,PingFang SC;font-weight:400;color:rgba(51,51,51,1);line-height:40rpx;}
.container .page-section .formBlock .section .section__input{height:88rpx;padding:0px 20rpx;width:100%;display:block; box-sizing:border-box;background:rgba(245,246,250,1);border-radius:6rpx;font-size:28rpx;color:rgba(51,51,51,1);}
.container .page-section .formBlock .btn-area{padding-top:0rpx;width:100%;position: relative;}
.UserInfoBtn {
    position: absolute;
    left: 0;
    top: 0;
    width: 610rpx!important;
    height: 88rpx;
    background: transparent;
    border-radius: 6rpx;
    padding: 0rpx;
    margin: 0;
    z-index: 10;
}
.container .page-section .formBlock .btn-area .submitBtn{width:100%;height:88rpx;background:linear-gradient(270deg,rgba(242,89,12,1) 0%,rgba(255,114,13,1) 100%);border-radius:6rpx;font-size:30rpx;font-family:PingFangSC-Medium,PingFang SC;font-weight:500;color:rgba(255,255,255,1);line-height:88rpx;padding:0rpx;}
.container .page-section .c{padding:30rpx 80rpx 0 80rpx; width:100%;text-align: center;display: block;box-sizing:border-box;font-size:22rpx;font-family:PingFangSC-Regular,PingFang SC;font-weight:400;color:rgba(191,191,191,1);line-height:34rpx;}

