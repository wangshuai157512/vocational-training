page {
    height: 100%;
    background:#FDEADA;
    background-size: cover;
    height: 100%;
}

.modal {position: fixed;top: 0;bottom: 0;left: 0;right: 0;height:100%;background: rgba(0,0,0,0.5);display: flex;justify-content: center;align-items: center; z-index: 3;}
.phone {
    width:562rpx;
    height:420rpx;
    background:rgba(255,255,255,1);
    border-radius:16rpx;
    padding: 44rpx 41rpx;
    box-sizing: border-box;
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(51,51,51,1);
}
.phone .phoneImg {
    width: 330rpx;
    height: 110rpx;
    margin: 38rpx 75rpx 47rpx 75rpx;
}
.phone .phoneImg image{
    width: 100%;
    height: 100%;
}
.phoneBtn {
    width:100%;
    height:88rpx;
    border-radius:49rpx;
    position: relative;
}
.phoneBtn button {
    width:430rpx!important;
    height:88rpx!important;
    line-height: 88rpx;
    text-align: center;
    color: #fff;
    font-size:36rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:550;
    padding: 0;
    margin: 0;
    /* background:linear-gradient(270deg,rgba(242,89,12,1) 0%,rgba(255,114,13,1) 100%); */
    background:rgba(7,193,96,1);
    border-radius:8px;
    position: absolute;
    top: 0;
    left: 26rpx;
}

.group_body {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}
.group_index {
    position: fixed;
    /* top: 60rpx; */
    left: 16rpx;
    width: 64rpx;
    height: 64rpx;
    background:rgba(255,255,255,0.5);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    border:0.3px solid rgba(0,0,0,0.08);
    z-index: 502;
}
.group_index image{
    width: 40rpx;
    height: 40rpx;
}
.group_bg {
    background-image: url('https://xxzx.chinaedu.net/wx/img/1593333212289.png');
    background-size: cover;
    background-repeat: no-repeat;
    width: 750rpx;
    height: 950rpx;
    z-index: 2;
}
.group_content {
    width: 690rpx;
    text-align: center;
    font-size:26rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    color:rgba(96,101,108,1);
    padding: 48rpx 33rpx 50rpx 48rpx;
    box-sizing: border-box;
    box-shadow:0px 24px 48px 0px rgba(230,76,0,0.1);
    border-radius: 8rpx;
    background: #fff;
    margin-top: -600rpx;
    margin-bottom: 50rpx;
    z-index: 20;
    position: relative;
}
.group_content_title {
    font-size:40rpx;
    font-weight:550;
    color:rgba(17,25,21,1);
    margin-bottom: 40rpx;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.group_content_weal_img {
    width: 100%;
    display: flex;
    justify-content: space-around;
}
.group_content_weal_img image {
    width: 100rpx;
    height: 100rpx;
    /* background: red; */
}
.lineImg {
    width: 690rpx;
    height: 80rpx;
    position: absolute;
    left: 0;
    top: 320rpx;
}
.lineImg image {
    width: 100%;
    height: 100%;
}

.change_content {
    margin: 98rpx 0 60rpx 0 ; 
}
.change_content text {
    color: #FF5319;
}
.countdown {
    font-size:36rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:550;
    color:rgba(217,149,54,1);
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;

}
.countdown span {
    display: inline-block;
    width:40rpx;
    height:40rpx;
    background:rgba(217,149,54,1);
    border-radius:4rpx;
    color: #fff;
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    margin: 0 10rpx;
}

.group_people {
    /* width: 330rpx; */
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 0 80rpx;
    box-sizing: border-box;
    position: relative;
    /* left: 50%;
    transform: translateX(-50%); */
}
.group_people_every {
    width: 50%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.group_people_Img {
    width: 112rpx;
    height: 118rpx;
    position: relative;
}
.group_people image{
    width: 112rpx;
    height: 112rpx;
    border-radius: 50%;
    
}
.commander {
    width:84rpx;
    height:38rpx;
    line-height: 38rpx;
    background:linear-gradient(90deg,rgba(185,142,81,1) 0%,rgba(237,187,114,1) 100%);
    border-radius:19rpx;
    font-size:24rpx;
    font-weight:550;
    text-align: center;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    color: #fff;
    z-index: 50;
}
.group_people .nickname {
    margin: 20rpx 0 44rpx 0;
    /* width: 112rpx; */
    width: 100%;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}

.group_State {
    width: 100%;
    height:88rpx;
    display: flex;
    justify-content: center;
    position: relative;
}
.group_State button{
    width:520rpx!important;
    height:88rpx!important;
    line-height: 88rpx;
    text-align: center;
    color: #fff;
    font-size:36rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:550;
    padding: 0;
    margin: 0;
    background:linear-gradient(270deg,rgba(242,89,12,1) 0%,rgba(255,114,13,1) 100%);
    border-radius:49rpx; 
}
.authorize{position: absolute;left: 0;top: 0;z-index: 10;background: transparent;}
.authorize button{background: transparent;}
.remind {
    padding-top: 25rpx;
    font-size:26rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(184,192,204,1);
}

.group_rule {
    position: absolute;
    top: 262rpx;
    right: 0;
    width:130rpx;
    height:48rpx;
    line-height: 48rpx;
    background:rgba(0,0,0,0.4);
    border-radius:100rpx 0px 0px 100rpx;
    text-align: center;
    font-size:24rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
    z-index: 22;
}

.modal {position: fixed;top: 0;bottom: 0;left: 0;right: 0;height:100%;background:rgba(0,0,0,0.5);z-index: 30;}
.rule {
    position: fixed;
    left: 0;
    bottom: 0;
    width:750rpx;
    height:748rpx;
    background:rgba(255,255,255,1);
    padding: 0 48rpx 31rpx 48rpx;
    box-sizing: border-box;
    z-index: 500;
}
.ruleTitle {
    width: 100%;
    height: 112rpx;
    line-height: 112rpx;
    font-size:36rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(46,48,51,1);
    text-align: center;
}
.closeRule {
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    top: 24rpx;
    right: 24rpx;
    z-index: 501;
}
.closeRule image{
    width: 100%;
    height: 100%;
}
.ruleContent view {
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(96,101,108,1);
    line-height:44rpx;
    margin-bottom: 25rpx;
}
