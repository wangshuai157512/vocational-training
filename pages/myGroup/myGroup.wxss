
page {
    background:rgba(245,246,247,1);
    width: 750rpx;
    padding-top: 100rpx;
    box-sizing: border-box;
    font-family:PingFangSC-Medium,PingFang SC;
    height: 100%;
}

.swiper-tab {
    width: 100%;
    height: 100rpx;
    background: #fff;
    box-shadow:0px 4px 16px 0px rgba(0,0,0,0.05);
    display: flex;
    align-items: center;
    justify-content: space-around;
    color: #60656C;
    font-size:28rpx;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 100;
}
.active {
    font-weight:600;
    color:rgba(35,115,115,1);
    font-size:34rpx!important;
}
.swiper {
    height: 100%;
    /* margin-top: 100rpx; */
}

.myGroupBody {
    width: 690rpx;
    margin: 30rpx 30rpx 24rpx 30rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    background-color:#fff;
    border-radius:8rpx;
}
.myGroupTitle {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    position: relative;
}
.myGroupTitleLeft {
    font-size:26rpx;
    color:rgba(46,48,51,1);
    display: flex;
    align-items: center;
}
.myGroupTitleLeft text{
    display: inline-block;
    width:32rpx;
    height:32rpx;
    background:rgba(46,48,51,1);
    border-radius:3rpx;
    font-size:22rpx;
    text-align: center;
    color:rgba(255,255,255,1);
    margin: 0 10rpx;
}
.myGroupTitleRight {
    font-size:28rpx;
    color:#FF5319
}
.success {
    color: #00B35A;
}
.fail {
    color: #60656C
}
.line {
    width:690rpx;
    height:0.3px;
    background:rgba(237,239,242,1);
    position: absolute;
    left: -30rpx;
    bottom: 0;
}
.materialsList {
    width: 100%;
    padding: 19rpx 0 21rpx 0;
    border-bottom: 0.3px solid #EDEFF2;
    display: flex; 
}
.materialsListLeft {
    width: 168rpx;
    height: 168rpx;
}
.materialsListLeft image {
    width: 100%;
    height: 100%;
    border-radius:8rpx;
}
.materialsListRight {
    width: 438rpx;
    margin-left: 24rpx;
    font-size:34rpx;
    font-weight:600;
    color:rgba(46,48,51,1);
    height: 168rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.materialsListRight view{
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.materialsListRight .introduction {
    font-size:24rpx;
    font-weight:400;
    color:rgba(96,101,108,1);
    /* margin: 20rpx 0 30rpx 0; */
    margin: 10rpx 0 0 0;
}
.materialsListRight .tag {
    height: 32rpx;
    line-height: 32rpx;
    font-size: 20rpx;
    color: #959CA6;
    padding: 0 15rpx;
    margin-right: 22rpx;
    border-radius:16rpx;
    background:rgba(238,238,238,1);  
}
.myGroupBottom {
    width: 100%;
    height: 104rpx;
    position: relative;
}
.myGroupBottom button{
    width:206rpx!important;
    height:64rpx!important;
    line-height: 64rpx;
    background:linear-gradient(270deg,rgba(242,89,12,1) 0%,rgba(255,114,13,1) 100%);
    border-radius:49rpx;
    text-align: center;
    font-size:28rpx;
    color: #fff;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 20rpx;
    right: 0;
}
.myGroupBottom .detail {
    background:rgba(255,255,255,0);
    border:0.3px solid rgba(151,151,151,1);
    color:rgba(96,101,108,1)!important;
}